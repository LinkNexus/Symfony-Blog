{% apply inline_css %}
    <style>
        .button {
            all: unset;
            width: 100%;
            height: 45px;
            border-radius: 5px;
            text-align: center;
            font-size: 1.3rem;
            font-weight: bold;
            margin-top: 20px;
            cursor: pointer;
            box-shadow: 7px 6px 28px 1px rgba(0, 0, 0, 0.24);
            outline: none;
            transition: 0.2s all;
            display: block;
            line-height: 45px;
            background: rgb(35, 182, 217);

            &:active {
                transform: scale(0.98);
                /* Scaling button to 0.98 to its original size */
                box-shadow: 3px 2px 22px 1px rgba(0, 0, 0, 0.24);
                /* Lowering the shadow */
            }
        }

        p {
            width: 100%;
            text-align: center;
        }
    </style>
    <p>
        A new comment from {{ comment.owner.username }} has been reported from one of our users <a href="#">{{ user.username }}</a>; <br>
        Take a look and choose what to do with it.
    </p>

    <a href="{{ url('app_comment_replies', { id: comment.id }) }}" class="button">
        See the comment
    </a>

    <p>Thanks</p>
{% endapply %}

